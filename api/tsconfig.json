{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.0.0",

  "compilerOptions": {
    "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"],
    "module": "nodenext",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext", // Alinhado com o module
    
    "outDir": "./dist",    // Onde os arquivos .js vão morar
    "rootDir": "./src",    // Onde estão seus fontes .ts
    "baseUrl": ".",        // Necessário para os paths funcionarem

    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"], // Diz ao TS para compilar tudo dentro de src
  "exclude": ["node_modules", "dist"]
}